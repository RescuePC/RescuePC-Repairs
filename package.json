{
  "name": "rescuepc-minimal-store",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "test": "npm run lint && npm run build",
    "test:api": "node scripts/test-api-endpoints.mjs",
    "test:all": "npm run lint && npm run build && npm run test:api",
    "test:security": "powershell -ExecutionPolicy Bypass -File .\\scripts\\security-audit.ps1 -GenerateReport",
    "test:security:fix": "powershell -ExecutionPolicy Bypass -File .\\scripts\\security-audit.ps1 -FixIssues -GenerateReport",
    "docker:build": "docker build -t rescuepc-repairs:latest .",
    "docker:run": "docker run -p 3000:3000 rescuepc-repairs:latest",
    "docker:deploy": "powershell -ExecutionPolicy Bypass -File .\\scripts\\deploy-docker.ps1",
    "docker:deploy:prod": "powershell -ExecutionPolicy Bypass -File .\\scripts\\deploy-docker.ps1 -Environment prod",
    "docker:stop": "docker-compose down",
    "docker:clean": "docker-compose down -v && docker system prune -f",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "desktop:build": "powershell -ExecutionPolicy Bypass -File .\\bin\\build.ps1",
    "desktop:build:signed": "powershell -ExecutionPolicy Bypass -File .\\bin\\build.ps1 -Sign",
    "desktop:build:commercial": "powershell -ExecutionPolicy Bypass -File .\\bin\\build.ps1 -Sign -SignMethod Commercial",
    "desktop:audit": "powershell -ExecutionPolicy Bypass -File .\\scripts\\ops\\Run-Audit.ps1 -TimeoutSec 90 -MaxLoops 2",
    "desktop:run": "powershell -ExecutionPolicy Bypass -File .\\bin\\RescuePC_Launcher.ps1"
  },
  "dependencies": {
    "@prisma/client": "^6.19.0",
    "@types/pg": "^8.15.6",
    "dotenv": "^17.2.3",
    "next": "^15.5.6",
    "nodemailer": "^7.0.10",
    "pg": "^8.16.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "resend": "^3.2.0",
    "stripe": "^14.17.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.17",
    "@types/node": "^20",
    "@types/nodemailer": "^7.0.3",
    "@types/react": "^19",
    "autoprefixer": "^10.4.22",
    "eslint": "^9",
    "eslint-config-next": "16.0.1",
    "postcss": "^8.5.6",
    "postcss-nesting": "^13.0.2",
    "prisma": "^6.19.0",
    "tailwindcss": "^4.1.17",
    "typescript": "^5"
  }
}
