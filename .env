# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/rescuepc?schema=public"

# Application
NODE_ENV=development
PORT=3000
APP_VERSION=2.0.0

# URLs
NEXTAUTH_URL=http://localhost:3000
WEBSITE_URL=http://localhost:3000
API_BASE_URL=http://localhost:3000/api
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Authentication & security
JWT_SECRET=your_generated_32_char_secret
API_SECRET_KEY=your_generated_32_char_secret
ENCRYPTION_KEY=your_generated_32_char_secret
ADMIN_API_KEYS=admin_key_1,admin_key_2

# Stripe
STRIPE_SECRET_KEY=sk_test_your_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_key
STRIPE_PRODUCT_ID=prod_SVZyTZJsKm8rUK

# Stripe Price IDs (update these with your actual price IDs)
STRIPE_BASIC_PRICE_ID=price_your_basic_price_id
STRIPE_PRO_PRICE_ID=price_your_pro_price_id
STRIPE_ENTERPRISE_PRICE_ID=price_your_enterprise_price_id
STRIPE_LIFETIME_PRICE_ID=price_your_lifetime_price_id

# Email (optional for development)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=user@example.com
SMTP_PASSWORD=your_password
SMTP_FROM=no-reply@rescuepc.com

# Feature flags
ENABLE_MAILING=false
ENABLE_STRIPE=true
ENABLE_AUTH=false

# Owner license (for development)
OWNER_EMAIL=owner@example.com
OWNER_LICENSE_KEY=OWNER-XXXX-XXXX-XXXX-XXXX

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000  // 15 minutes
RATE_LIMIT_MAX_REQUESTS=100  // Max requests per window
