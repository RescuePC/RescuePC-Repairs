NODE_ENV=development
PORT=3000
APP_VERSION=2.0.0

# URLs
NEXTAUTH_URL=http://localhost:3000
WEBSITE_URL=http://localhost:3000
API_BASE_URL=http://localhost:3000/api
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Authentication & security
JWT_SECRET=your_generated_32_char_secret
API_SECRET_KEY=your_generated_32_char_secret
ENCRYPTION_KEY=your_generated_32_char_secret
ADMIN_API_KEYS=admin_key_1,admin_key_2

# Stripe
STRIPE_SECRET_KEY=sk_test_your_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_key
STRIPE_WEBHOOK_SECRET=whsec_test_your_key
STRIPE_DEFAULT_PRICE_ID=price_12345_from_stripe_dashboard
NEXT_PUBLIC_APP_URL=http://localhost:3000
STRIPE_BASIC_PRICE_ID=price_basic
STRIPE_PRO_PRICE_ID=price_pro
STRIPE_ENTERPRISE_PRICE_ID=price_enterprise
STRIPE_LIFETIME_PRICE_ID=price_lifetime
STRIPE_GOVERNMENT_PRICE_ID=price_government
STRIPE_ENTERPRISE_PACKAGE_PRICE_ID=price_enterprise_package
STRIPE_BASIC_LICENSE_URL=https://buy.stripe.com/basic
STRIPE_PRO_LICENSE_URL=https://buy.stripe.com/pro
STRIPE_ENTERPRISE_LICENSE_URL=https://buy.stripe.com/enterprise
STRIPE_GOVERNMENT_LICENSE_URL=https://buy.stripe.com/government
STRIPE_LIFETIME_LICENSE_URL=https://buy.stripe.com/lifetime
STRIPE_ENTERPRISE_PACKAGE_URL=https://buy.stripe.com/enterprise-package

# Database (local development)
DATABASE_URL=postgresql://user:password@localhost:5432/rescuepc?schema=public
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=20
DATABASE_SSL=false

# Email (Resend or SMTP)
RESEND_API_KEY=re_your_key
SMTP_HOST=smtp.mailersend.net
SMTP_PORT=587
SMTP_SECURE=true
SMTP_USER=your_mailersend_username
SMTP_PASS=your_mailersend_password
EMAIL_FROM=noreply@rescuepcrepairs.com
EMAIL_FROM_NAME=RescuePC Toolkit
EMAIL_REPLY_TO=support@rescuepcrepairs.com
EMAIL_ALERT_TO=admin@rescuepcrepairs.com
EMAIL_SENDING_ENABLED=true

# Security headers & rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=false
CSP_REPORT_URI=https://rescuepcrepairs.com/api/security/csp-report

# Feature flags
FEATURE_TRIALS_ENABLED=true
FEATURE_DONATIONS_ENABLED=true
FEATURE_ENTERPRISE_ENABLED=true
FEATURE_API_DOCS_PUBLIC=false

# Analytics & logging
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX
LOG_LEVEL=info
LOG_FORMAT=json
LOG_OUTPUT=stdout
